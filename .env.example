# MovieRec Environment Configuration Template
# Copy this file to .env.local or .env.production and fill in your values

# Environment
ENVIRONMENT=production
NODE_ENV=production

# API Configuration
REACT_APP_API_GATEWAY_INVOKE_URL=https://your-api-gateway-url.amazonaws.com/prod/
REACT_APP_ENVIRONMENT=production

# TMDB API Configuration
REACT_APP_TMDB_API_KEY=your_tmdb_api_key_here

# AWS Cognito Configuration
REACT_APP_COGNITO_USER_POOL_ID=your_user_pool_id
REACT_APP_COGNITO_CLIENT_ID=your_client_id
REACT_APP_COGNITO_REGION=eu-north-1

# AWS Configuration (for CI/CD and local development)
AWS_REGION=eu-north-1
AWS_ACCOUNT_ID=your_aws_account_id

# Health Check URLs (for monitoring)
HEALTH_CHECK_URL=https://movierec.net
STAGING_HEALTH_CHECK_URL=https://staging.movierec.net

# AWS Amplify Configuration
AMPLIFY_APP_ID=your_amplify_app_id
AMPLIFY_BRANCH_NAME=main
AMPLIFY_STAGING_BRANCH_NAME=develop

# CI/CD Configuration (GitHub Secrets)
# These should be configured in GitHub repository secrets:
# - AWS_ACCESS_KEY_ID
# - AWS_SECRET_ACCESS_KEY
# - REACT_APP_TMDB_API_KEY
# - REACT_APP_COGNITO_USER_POOL_ID
# - REACT_APP_COGNITO_CLIENT_ID
# - STAGING_API_URL
# - STAGING_TMDB_API_KEY
# - STAGING_COGNITO_USER_POOL_ID
# - STAGING_COGNITO_CLIENT_ID